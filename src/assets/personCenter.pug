extends header
block content
    div
        .wd-nav-area-bg
            ul.wd-nav-area
                - var navlist=[{id:'category',name:'全部'}];
                each item,index in navlist
                    if index==0
                        li.all-category(style="width:287px;")
                            a.allcat #{item.name}
                            dl.menuList(style="display:none;")
                                block menulist
                                    dd
                                        a.mainTitle 美食
                                        p 
                                            a 精选品牌
                                            a 小吃快餐
                    else 
                        li
                            a(href='#') #{item.name}
    .perWrap
        .perInfo.clearfix
            .perLeft#leftApp
                dl.listNav
                    dt(style="cursor:pointer;")
                        a(href="personCenter.html")
                            span 
                            | 个人主页
                    dd
                        dl
                            dt
                                span
                                | 消费返利
                            dd 
                                a(href="discountOrder.html") 循环消费
                    dd
                        dl
                            dt
                                span
                                | 我的记录
                            dd 
                                a(href="backBuylist.html") 回购记录
                            dd 
                                a(href="convertlist.html") 兑换记录
                            dd 
                                a(href="obligationlist.html") 我的历史
                            dd 
                                a(href="obligationlisting.html") 进行中的消费返利
                    dd
                        dl
                            dt
                                a(href="banklist.html") 
                                    span
                                    | 我的银行卡
            .perRight.clearfix(style='height:auto;')
                block centerContent